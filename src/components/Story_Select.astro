<div id="story-select-layer" class="layer">
  <div id="story-list-bg"></div>
  <div id="story-list" class="scrollable"></div>
</div>
<style is:global>
  #story-list{
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: fixed;
    left: calc(65vw - 110px);
    top: calc(50dvh - 4rem);
    width: 35vw;
    height: calc(50dvh + 2rem);
    padding-block: 1rem;
    transform: skewX(-30deg);
    overflow-y: scroll;
    pointer-events: all;
    touch-action: pan-y;
  }
  #story-list-bg{
    position: fixed;
    left: 65vw;
    top: 0;
    width: 60vw;
    height: 100dvh;
    background-color: rgb(220, 225, 230);
    transform: skewX(-30deg);
  }
  .story-box{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
    width: 30vw;
    flex-shrink: 0;
    background-color: #eee;
    border: none;
    border-left: 7px solid #28b67b;
    pointer-events: all;
    touch-action: pan-y;
    box-shadow: 0 0 5px #0004;
    h3{
      transform: skewX(30deg) translateX(10px);
      margin-block: auto;
      width: fit-content;
      text-align: left;
      font-size: 1.5rem;
    }
    &:hover{
      background-color: #ccc;
    }
  }
  .story-start{
    transform: translateX(-10px);
    pointer-events: all;
    background-color: #e7ad2f;
    height: 2.5rem;
    width: 100px;
    border: none;
    border-radius: 5px;
    box-shadow: 0 0 5px #0004;
    &:hover{
      background-color: #a57c22;
    }
    p{
      transform: skewX(30deg);
      font-size: 1.2rem;
      margin-block: auto;
    }
  }
</style>